# Production environment variables (example)
# Copy this to .env.production and fill values before deploying

# Server
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.example

# Database
DB_HOST=your-db-host
DB_PORT=3306
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis (optional)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (only required if email alerts are enabled)
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_app_password
SMTP_HOST=smtp.example.com
SMTP_PORT=587

# JWT & Sessions
JWT_SECRET=generate_a_strong_secret
SESSION_SECRET=generate_a_strong_secret

# Client
VITE_API_URL=https://your-backend.example/api

# Other optional: Sentry, Firebase
SENTRY_DSN=
VITE_FIREBASE_API_KEY=
FIREBASE_PRIVATE_KEY=
